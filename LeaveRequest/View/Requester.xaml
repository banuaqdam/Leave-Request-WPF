         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Requester" Height="720" Width="1280" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
